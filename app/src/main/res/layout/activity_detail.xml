<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/activity_detail_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andapp="http://schemas.android.com/tools"
    >

    <com.sprite.spriteanimotion.views.ObservableScrollView
        android:id="@+id/activity_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_detail_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_view_height"
                android:scaleType="centerCrop"
                android:src="@mipmap/photo"
                />

            <LinearLayout
                android:id="@+id/activity_detail_linear"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@id/activity_detail_cover"
                android:background="@color/md_blue_500"
                android:elevation="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="16dp"
                    android:text="an awesome title"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    />

                <RatingBar
                    android:id="@+id/activity_detail_rating"
                    style="?android:ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:numStars="5"
                    android:rating="5.0"
                    />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/activity_detail_fab"
                android:layout_width="@dimen/fab_size_normal"
                android:layout_height="@dimen/fab_size_normal"
                android:layout_alignParentRight="true"
                android:layout_below="@id/activity_detail_cover"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="-27dp"
                app:borderWidth="0dp"
                app:elevation="6dp"
                andapp:pressedTranslationZ="12dp"
                android:src="@mipmap/ab_fav_normal"
                />

           <include layout="@layout/activity_detail_part"/>

